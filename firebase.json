{
	"hosting": {
		"public": "dist",
		"site": "subs-app-dev",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		]
	},
	"functions": {
		"predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
	},
	"database": {
		"rules": "database.rules.json"
	},
	"emulators": {
		"functions": {
			"port": 5001
		},
		"database": {
			"port": 9000
		},
		"hosting": {
			"port": 5000
		},
		"ui": {
			"enabled": true
		}
	}
}
